
<div class="page-header" style="background: url(/assets/img/banner1.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="breadcrumb-wrapper">
          <h2 class="page-title">Login to account</h2>
        </div>
      </div>
    </div>
  </div>
</div>
<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-4">
        <div class="page-login-form box">
          <h3>
            Login
          </h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group is-empty">
              <div class="input-icon">
                <i class="icon fa fa-user"></i>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
              <span class="material-input"></span></div>
            <div class="form-group is-empty">
              <div class="input-icon">
                <i class="icon fa fa-unlock-alt"></i>
                <%= f.password_field :password, autocomplete: "off" ,class: "form-control" %>
              </div>
              <span class="material-input"></span></div>
            <div class="checkbox">
              <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
              <% end -%>
            </div>
            <%= f.submit "Log in",{class: 'btn btn-common log-btn'} %>
          <% end %>
          <ul class="form-links">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <li class="pull-left"><%= link_to "Don't have an account?", new_registration_path(:user) %></li>
            <% end -%>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <li class="pull-right"><%= link_to "Forgot your password?", new_password_path(:user) %></li>
            <% end -%>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
